<p style="color: green"><%= notice %></p>

<h1> <strong> <%= @list.name %> </strong>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"> <%= bookmark.movie.title %> </li>
     <li> <%= bookmark.movie.overview %> </li>
    <%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>
</ul>
<br>

<div>
  <%= link_to "Back to lists", lists_path, class:"btn btn-primary" %>
  <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class:"btn btn-primary" %>
</div>
